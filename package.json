{
  "name": "nodejs-typescript-hmr",
  "version": "0.0.1",
  "description": "Nodejs HMR boilerplate",
  "author": "Ahmed korim <ahmedkorrim@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
	"format": "prettier --write \"src/**/*.{ts,js,gql,graphql}\"",
	"ts-check": "tsc --noEmit -p ./tsconfig.test.json",
	"start:hmr": "cross-env NODE_ENV=development node --inspect-brk ./dist/bin.js",
	"codegen": "node ./scripts/gql-codegen.js",
	"webpack": "webpack --progress --config webpack.config.dev.js",
	"start:prod": "node build/compiled.js",
	"start": "ts-node -r tsconfig-paths/register src/main.ts",
	"prestart:prod": "rimraf build && npm run build",
	"lint": "tslint -p tsconfig.json -c tslint.json",
	"build": "webpack --progress --config webpack.config.prod.js",
	"lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
	"test": "jest --passWithNoTests --runInBand --forceExit --config ./jest.config.js",
	"test:watch": "jest --passWithNoTests --config ./jest.config.js --watch --runInBand --notify",
	"test:cov": "jest  --passWithNoTests --runInBand --forceExit --config ./jest.config.js --coverage",
	"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
	"deploy:force": "git pull -f && yarn  build ; docker-compose up -d --build"
  },
  "engines": {
	"node": ">= 10",
	"npm": ">= 6.1.0"
  },
  "dependencies": {
	"class-validator": "^0.12.0-rc.0",
	"dotenv": "^8.2",
	"nanoid": "^2.1",
	"ramda": "^0.27",
	"reflect-metadata": "^0.1.12",
	"source-map-support": "^0.5",
	"tslib": "^1.11",
	"winston": "^3.2"
  },
  "devDependencies": {
	"@types/node": "^10.10",
	"@types/ramda": "^0.27",
	"@types/socket.io": "^2.1.13",
	"clean-webpack-plugin": "^3.0.0",
	"copy-webpack-plugin": "^5.1",
	"cross-env": "^7.0.2",
	"fork-ts-checker-webpack-plugin": "^4.1",
	"happypack": "^5.0",
	"hard-source-webpack-plugin": "^0.13.1",
	"prettier": "^2.0.5",
	"source-map-loader": "^0.2",
	"start-server-webpack-plugin": "^2.2",
	"thread-loader": "^2.1",
	"ts-loader": "^6.2",
	"ts-node": "8.1.0",
	"tsconfig-paths": "^3.9",
	"tsconfig-paths-webpack-plugin": "^3.2",
	"tslint": "^6",
	"typescript": "3.8",
	"webpack": "^4",
	"webpack-cli": "^3.3",
	"webpack-node-externals": "^1.7"
  }
}
